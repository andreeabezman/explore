<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.ViewPlace"
    android:background="@drawable/bg_login_edited">



    <androidx.cardview.widget.CardView
        android:id="@+id/cvCredentials"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:elevation="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#80ffffff"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/photo"
                android:src="@drawable/ic_photo_black_24dp"
                android:layout_width="match_parent"
                android:layout_height="200dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/place_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Place name"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/quantum_black_text"/>

                <TextView
                    android:id="@+id/place_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Place address"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/quantum_black_text"/>

                <TextView
                    android:id="@+id/place_open_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open now : "
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/quantum_black_text"/>

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:max="5" />

                <Button
                    android:id="@+id/btn_show_direction"
                    android:layout_width="315dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_bluegrey"
                    android:paddingTop="2dp"
                    android:paddingBottom="10dp"
                    android:text="Show Direction"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:layout_marginBottom="20dp"
                    />

                <Button
                    android:id="@+id/btn_add_fav"
                    android:layout_width="315dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_bluegrey"
                    android:padding="4dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="2dp"
                    android:text="Add favorite"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>